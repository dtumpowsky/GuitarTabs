@{
  Layout = "_Layout";
}

<div class="jumbotron">
  <h1>Guitar Tab Creator</h1>
</div>

<div class="vex-tabdiv"
    width=680 scale=1.0 editor="true" player="true"
    editor_width=680 editor_height=330>
    options tab-stems=true tab-stem-direction=down
    tabstave time=4/4 key=C notation=true
    notes <span id="tab-output"></span></div>

<form id="note-form" action="/store-tab" method="post">
  <label for="song-name">Song Name:</label>
  <input id="song-name" name="song-name" type="text">
  <br>
  <label for="song-name">Song Artist:</label>
  <input id="song-artist" name="song-artist" type="text">
  <br>
  <button type="button" class="btn btn-link" id="whole-note"><img src="~/img/WholeNote.png"></button>
  <button type="button" class="btn btn-link" id="half-note"><img src="~/img/HalfNote.png"></button>
  <button type="button" class="btn btn-link" id="quarter-note"><img src="~/img/QuarterNote.png"></button>
  <button type="button" class="btn btn-link" id="eighth-note"><img src="~/img/EighthNote.png"></button>
  <button type="button" class="btn btn-link" id="sixteenth-note"><img src="~/img/SixteenthNote.png"></button>
  <button type="button" class="btn btn-link" id="thirty-second-note"><img src="~/img/32ndNote.png"></button>
  <button type="button" class="btn btn-link" id="quarter-rest"><img src="~/img/QuarterRest.png"></button>
  <button type="button" class="btn btn-link" id="eighth-rest"><img src="~/img/EighthRest.png"></button>
  <br>
  <div id="single-notes">
    <label>Fret:</label>
    <select onchange="ChooseNoteFret()" id='guitar-fret-selection-0' name='guitar-fret-selection-0' type='text'>
      <option value=0 selected="selected">0</option>
      <option value=1>1</option>
      <option value=2>2</option>
      <option value=3>3</option>
      <option value=4>4</option>
      <option value=5>5</option>
      <option value=6>6</option>
      <option value=7>7</option>
      <option value=8>8</option>
      <option value=9>9</option>
      <option value=10>10</option>
      <option value=11>11</option>
      <option value=12>12</option>
      <option value=13>13</option>
      <option value=14>14</option>
      <option value=15>15</option>
      <option value=16>16</option>
      <option value=17>17</option>
      <option value=18>18</option>
      <option value=19>19</option>
      <option value=20>20</option>
      <option value=21>21</option>
      <option value=22>22</option>
      <option value=23>23</option>
      <option value=24>24</option>
    </select>
    <label>String:</label>
    <select onchange="ChooseNoteString()" id='guitar-string-selection-0' name='guitar-string-selection-0' type='text'>
      <option value=1 selected="selected">1</option>
      <option value=2>2</option>
      <option value=3>3</option>
      <option value=4>4</option>
      <option value=5>5</option>
      <option value=6>6</option>
    </select>
  </div>
    <button type="button" class="btn btn-info" id="add-note">Add Note</button>
    <button type="button" class="btn btn-info" id="add-multiple-notes">Make a Chord</button>
    <button type="button" class="btn btn-primary" id="a-major">A</button>
    <button type="button" class="btn btn-primary" id="b-major">B</button>
    <button type="button" class="btn btn-primary" id="c-major">C</button>
    <button type="button" class="btn btn-primary" id="d-major">D</button>
    <button type="button" class="btn btn-primary" id="e-major">E</button>
    <button type="button" class="btn btn-primary" id="f-major">F</button>
    <button type="button" class="btn btn-primary" id="g-major">G</button>
    <button type="submit" class="btn btn-warning" id="add-song">Add Song</button>

</form>

<script>
  $(document).ready(function() {
    $("#note-form").submit(function(event) {
      event.preventDefault();
      $("#submitTab").val($(".editor").val());
      $("#submitName").val($("#song-name").val());
      $("#submitArtistName").val($("#song-artist").val());
      $("#tabSave").submit();
    })
  })
</script>

<form id="tabSave" action="/store-tab" method="post">
  <input id="submitName" type="hidden" name="song-name" value="">
  <input id="submitArtistName" type="hidden" name="song-artist" value="">
  <input id="submitTab" type="hidden" name="song-tab" value="">
</form>
